# environment/.env.development
# Development Environment Configuration for V_track + Cloud Functions

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=8080

# === CLOUD FUNCTIONS URLs ===
CLOUD_FUNCTION_PAYMENT_URL=https://asia-southeast1-v-track-payments.cloudfunctions.net/create-payment
CLOUD_FUNCTION_LICENSE_URL=https://asia-southeast1-v-track-payments.cloudfunctions.net/license-service
CLOUD_FUNCTION_WEBHOOK_URL=https://asia-southeast1-v-track-payments.cloudfunctions.net/webhook-handler

# === PayOS credentials handled by Cloud Functions ===

# Email Configuration (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_dev_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SENDER_NAME=V_track Development

# License System Configuration
LICENSE_ENCRYPTION_KEY=your_32_byte_encryption_key_here_dev
LICENSE_DEFAULT_DURATION=365
LICENSE_MAX_ACTIVATIONS=1

# === V_TRACK EXISTING CONFIGS ===
# Google Drive Integration
GOOGLE_DRIVE_CREDENTIALS_PATH=credentials/service_account.json

# Database Configuration  
DATABASE_PATH=backend/database/vtrack.db
DATABASE_URL=sqlite:///backend/database/events.db
DB_POOL_SIZE=10

# Security Configuration
SECRET_KEY=your_flask_secret_key_development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/vtrack_dev.log