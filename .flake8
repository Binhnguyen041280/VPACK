[flake8]
# ============================================
# Flake8 Configuration for ePACK
# ============================================

# Maximum line length
max-line-length = 100

# Error codes to ignore
ignore =
    # E203: Whitespace before ':' (conflicts with black)
    E203,
    # W503: Line break before binary operator (conflicts with black)
    W503,
    # E501: Line too long (handled by black)
    E501,
    # W504: Line break after binary operator
    W504,
    # E402: Module level import not at top of file (for conditional imports)
    E402,
    # F401: Imported but unused (TODO: clean up unused imports)
    F401,
    # F841: Local variable assigned but never used (TODO: clean up)
    F841,
    # F541: f-string without placeholders (TODO: clean up)
    F541,
    # W291: Trailing whitespace (TODO: clean up)
    W291,
    # W293: Blank line contains whitespace (TODO: clean up)
    W293,
    # E722: Bare except (TODO: specify exception types)
    E722,
    # F811: Redefinition of unused name (TODO: clean up)
    F811,
    # F821: Undefined name (TODO: fix imports)
    F821,
    # F824: Unused global (TODO: clean up)
    F824,
    # C901: Function too complex (TODO: refactor)
    C901,
    # W605: Invalid escape sequence (TODO: use raw strings)
    W605,
    # F402: Import shadowed by loop variable (TODO: rename)
    F402,
    # F403: Wildcard import (TODO: explicit imports)
    F403,
    # E265: Block comment formatting (TODO: fix)
    E265,
    # E712: Comparison to True (TODO: use 'if cond:')
    E712

# Files and directories to exclude
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    node_modules,
    frontend,
    .next,
    out,
    htmlcov,
    coverage

# Maximum complexity (McCabe)
max-complexity = 15

# Enable PyFlakes error codes
select =
    E,  # pycodestyle errors
    W,  # pycodestyle warnings
    F,  # pyflakes
    C,  # mccabe complexity
    B,  # bugbear

# Docstring conventions (Google style)
docstring-convention = google

# Show source code for each error
show-source = True

# Show error codes in output
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
