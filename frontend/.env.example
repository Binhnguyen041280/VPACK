# ============================================
# VPACK - Frontend Environment Configuration
# ============================================
# Copy this file to .env.local and configure your values
#
# Note: Next.js requires variables to start with NEXT_PUBLIC_
# to be accessible in the browser

# ============================================
# API CONFIGURATION
# ============================================
# Backend API base URL
# Development: http://localhost:8080
# Production: https://your-domain.com or empty for same-origin deployment
#
# Examples:
# - Same origin (frontend and backend on same domain): leave empty or set to ''
# - Different origin: http://api.yourcompany.com
# - Local development: http://localhost:8080
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# API request timeout in milliseconds
# Default: 30000 (30 seconds)
# Increase for slow networks or large file operations
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================
# NEXT.JS CONFIGURATION
# ============================================
# Base path for Next.js application
# Use when deploying to a subdirectory
# Examples:
# - Root domain: leave empty
# - Subdirectory: /vtrack or /app
NEXT_PUBLIC_BASE_PATH=

# Asset prefix (usually same as base path)
# Controls where Next.js looks for static assets
NEXT_PUBLIC_ASSET_PREFIX=

# ============================================
# BUILD CONFIGURATION
# ============================================
# Node environment
# Options: development, production, test
NODE_ENV=development

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features in the frontend
NEXT_PUBLIC_ENABLE_AI_QR_RECOVERY=true
NEXT_PUBLIC_ENABLE_CLOUD_STORAGE=true
NEXT_PUBLIC_ENABLE_PAYMENT_SYSTEM=true

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Google Analytics tracking ID (optional)
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# DEBUGGING
# ============================================
# Enable debug mode (shows verbose logs in console)
NEXT_PUBLIC_DEBUG=false

# Enable React strict mode
REACT_STRICT_MODE=true
