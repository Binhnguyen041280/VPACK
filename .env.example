# ============================================
# VPACK - Root Environment Configuration
# ============================================
# Copy this file to .env and configure your values
#
# This file contains environment variables for both
# frontend and backend components.
#
# For development: copy to .env and modify as needed
# For production: set these in your deployment environment

# ============================================
# DEPLOYMENT MODE
# ============================================
# Options: development, docker, production, installed
VTRACK_DEPLOYMENT_MODE=development

# Deployment flags
VTRACK_IN_DOCKER=false

# ============================================
# DIRECTORY CONFIGURATION
# ============================================
# Base directory for application data
# Leave empty to use auto-detection
VTRACK_BASE_DIR=

# Input video directory
# Leave empty to use OS-specific defaults
VTRACK_INPUT_DIR=

# Output video directory
# Leave empty to use OS-specific defaults
VTRACK_OUTPUT_DIR=

# Flask session directory
# Leave empty to use default
VTRACK_SESSION_DIR=

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Database file path
# Leave empty to use auto-detection based on deployment mode
DB_PATH=

# ============================================
# FLASK CONFIGURATION
# ============================================
# Flask environment (development or production)
FLASK_ENV=development

# Enable debug mode (true/false)
# WARNING: Never enable in production!
DEBUG=false

# Secret key for session encryption
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# API base URL for frontend to connect to backend
# Development: http://localhost:8080
# Production: https://your-domain.com or empty for same-origin
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# API request timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Next.js base path (for subdirectory deployment)
NEXT_PUBLIC_BASE_PATH=

# ============================================
# CLOUD FUNCTIONS INTEGRATION
# ============================================
# Google Cloud Function URLs for payment/license system
# These must be configured for production deployment

# Payment creation endpoint
CLOUD_PAYMENT_URL=https://asia-southeast1-v-track-payments.cloudfunctions.net/create-payment

# Payment webhook handler
CLOUD_WEBHOOK_URL=https://asia-southeast1-v-track-payments.cloudfunctions.net/webhook-handler

# License service endpoint
CLOUD_LICENSE_URL=https://asia-southeast1-v-track-payments.cloudfunctions.net/license-service

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
# Google OAuth credentials for Google Drive integration
# Get from: https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable event processing logs (true/false)
ENABLE_EVENT_LOGS=true

# ============================================
# PERFORMANCE TUNING
# ============================================
# MediaPipe GPU (0=CPU only, 1=GPU if available)
MEDIAPIPE_DISABLE_GPU=1

# TensorFlow logging level (0=all, 3=errors only)
TF_CPP_MIN_LOG_LEVEL=3

# Python warnings (ignore recommended for production)
PYTHONWARNINGS=ignore

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Enable development tools and verbose logging
DEV_MODE=false

# Hot reload for development
HOT_RELOAD=false
